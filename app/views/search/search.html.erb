<h1>
  諸々の条件で日に対して絞り込みを行いたい
</h1>

<%
=begin
%>
<%= form_with model: @day, method: :get, local: true do |form| %>

    <div class="field">
        <%= form.label :event %>
        <%= form.search_field :event %>
    </div>

    <div class="actions">
        <%= form.submit %>
    </div>

    <% end %>
<%
=end
%>

<%= form_with url: "/search", method: :get do |form| %>

    <%= form.label :query_events, "Search for events (string):" %>
    <%= form.text_field :query %>
    <%= form.submit "Search" %>

<% end %>

<%= form_with url: "/search", method: :get do |form| %>

    <%= form.label :query_date, "Search for date:" %>
    <%= form.date_select :query %>
    <%= form.submit "Search" %>

<% end %>

<%= form_with url: "/search", method: :get do |form| %>

    <%= form.label :query_date, "Search for expense (integer):" %>
    <%= form.text_field :query %>
    <%= form.submit "Search" %>

<% end %>
